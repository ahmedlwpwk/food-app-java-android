                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="20dp"
                    android:layout_marginLeft="25dp"
                    android:text="$"
                    android:textColor="#9E9D24"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/mango_cake" />


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="15sp">

            <RelativeLayout

                android:id="@+id/R2Monginis"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffd4d2d3">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="240dp"
                    android:background="@drawable/pineapple" />

                <TextView
                    android:id="@+id/T2_1Monginis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="20dp"
                    android:text="Pineapple Cake"
                    android:textColor="#494949"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/T2_2Monginis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:padding="20dp"
                    android:text="40"
                    android:textColor="#494949"
                    android:textSize="20sp"
                    android:textStyle="bold" />

